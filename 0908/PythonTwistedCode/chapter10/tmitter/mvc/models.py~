# category model
@python_2_unicode_compatible
class Category(models.Model):
    name = models.CharField('åç§°',max_length=20)
    
    def __unicode__(self):
        return self.name
    
    def save(self, **kwargs):
        self.name = self.name[0:20]
        return super(Category,self).save()        
    
    class Meta:
        verbose_name = 'åˆ†ç±»'
        verbose_name_plural ='åˆ†ç±»'

    def __str__(self):
        return "%s | %s | %s" % (
            six.text_type(self.name))

        
    
class CategoryAdmin(admin.ModelAdmin):
    list_display = ('id','name')
    list_display_links = ('id','name')
    list_per_page = ADMIN_PAGE_SIZE
    
    
# Area Model
class Area(models.Model):
    TYPE_CHOISES = (
        (0,'å›½å®¶'),
        (1,'çœ?),
        (2,'å¸?),
        (3,'åŒºå¿'),
    )
    name = models.CharField('åœ°å',max_length=100)
    code = models.CharField('ä»£ç ',max_length=255)
    type = models.IntegerField('ç±»å‹',choices=TYPE_CHOISES)
    parent = models.IntegerField('çˆ¶çº§ç¼–å·(å…³è”è‡ªå·²)')
    
    def __unicode__(self):
        return self.name
    
    class Meta:
        verbose_name = u'æ‰€åœ¨åœ°'
        verbose_name_plural =u'æ‰€åœ¨åœ°'

class AreaAdmin(admin.ModelAdmin):
    list_display = ('id','name','code')
    list_display_links = ('id','name','code')
    list_per_page = ADMIN_PAGE_SIZE
    
# User model
class User(models.Model):
    id = models.AutoField(primary_key = True)

    username = models.CharField('ç”¨æˆ·å?,max_length = 20)
    password = models.CharField('å¯†ç ',max_length = 100)    
    realname = models.CharField('å§“å',max_length = 20)
    email = models.EmailField('Email')
    area = models.ForeignKey(Area,verbose_name='åœ°åŒº')
    face = models.ImageField('å¤´åƒ',upload_to='face/%Y/%m/%d',default='',blank=True)
    url = models.CharField('ä¸ªäººä¸»é¡µ',max_length=200,default='',blank=True)
    about = models.TextField('å…³äºæˆ?,max_length = 1000,default='',blank=True)
    addtime = models.DateTimeField('æ³¨å†Œæ—¶é—´',auto_now = True)
    friend = models.ManyToManyField("self",verbose_name='æœ‹å‹')
    
    def __unicode__(self):
        return self.realname
    
    def addtime_format(self):
        return self.addtime.strftime('%Y-%m-%d %H:%M:%S')
       
    def save(self,modify_pwd=True):
        if modify_pwd:
            self.password = function.md5_encode(self.password)
        self.about = formatter.substr(self.about,20,True)
        super(User,self).save()
        
    class Meta:
        verbose_name = u'ç”¨æˆ·'
        verbose_name_plural = u'ç”¨æˆ·'

    
class UserAdmin(admin.ModelAdmin):       
    list_display = ('id','username','realname','email','addtime_format')
    list_display_links = ('username','realname','email')
    list_per_page = ADMIN_PAGE_SIZE


# Note model
class Note(models.Model):
    
    id = models.AutoField(
        primary_key = True
    )
    message = models.TextField('æ¶ˆæ¯')
    addtime = models.DateTimeField('å‘å¸ƒæ—¶é—´',auto_now = True)
    category = models.ForeignKey(Category,verbose_name='æ¥æº')
    user = models.ForeignKey(User,verbose_name='å‘å¸ƒè€?)
    
    def __unicode__(self):
        return self.message
    
    def message_short(self):
        return formatter.substr(self.message,30)

    def addtime_format_admin(self):
        return self.addtime.strftime('%Y-%m-%d %H:%M:%S')
        
    def category_name(self):
        return self.category.name
    
    def user_name(self):
        return self.user.realname

    def save(self):
        self.message = formatter.content_tiny_url(self.message)
        self.message = html.escape(self.message)
        self.message = formatter.substr(self.message,140)
        super(Note, self).save()
    
    class Meta:
        verbose_name = u'æ¶ˆæ¯'
        verbose_name_plural = u'æ¶ˆæ¯'
    
    def get_absolute_url(self):
        return APP_DOMAIN + 'message/%s/' % self.id
    

class NoteAdmin(admin.ModelAdmin):
    list_display = ('id','user_name','message_short','addtime_format_admin','category_name')
    list_display_links = ('id','message_short')
    search_fields = ['message']
    list_per_page = ADMIN_PAGE_SIZE
    


admin.site.register(Note, NoteAdmin)
admin.site.register(Category, CategoryAdmin)
admin.site.register(User,UserAdmin)
#admin.site.register(Area,AreaAdmin)
